<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        tools:src="@drawable/starbucks" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginTop="@dimen/margin"
        android:layout_toRightOf="@id/location_image"
        android:textSize="@dimen/location_name"
        android:textStyle="bold"
        tools:text="Coffee Place" />

    <TextView
        android:id="@+id/location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_name"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_toRightOf="@id/location_image"
        android:textSize="@dimen/location_type"
        tools:text="Coffee" />

    <TextView
        android:id="@+id/location_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_type"
        android:layout_marginBottom="@dimen/margin"
        android:layout_toRightOf="@id/location_image"
        tools:text="A cute little coffee place. Come in for a cup of Joe." />

</RelativeLayout>
